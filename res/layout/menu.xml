<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="match_parent" android:layout_width="match_parent"
	android:orientation="vertical" android:background="@drawable/tablecloth_selector">
	<utils.actionbar.ActionBar android:id="@+id/actionbar"
		style="@style/ActionBar" />
	<GridView android:id="@+id/menuGridView" android:layout_below="@+id/actionbar"
		android:layout_alignParentBottom="true" android:stretchMode="spacingWidthUniform"
		android:numColumns="2" android:layout_width="match_parent"
		android:layout_height="wrap_content"></GridView>
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:padding="10dp"
		android:background="#AAFFFFFF" android:id="@+id/progress"
		android:orientation="vertical" android:layout_below="@+id/actionbar"
		android:layout_marginTop="20dip">
		<ProgressBar android:layout_width="wrap_content"
			android:layout_height="wrap_content" style="@android:style/Widget.ProgressBar.Inverse"
			android:layout_gravity="center_horizontal"></ProgressBar>
	</LinearLayout>
	<LinearLayout android:layout_centerInParent="true"
		android:id="@+id/nomeals" android:visibility="gone"
		android:layout_width="match_parent" android:layout_height="wrap_content"
		android:orientation="horizontal" android:background="#AAFFFFFF"
		android:padding="10dip">
		<ImageView android:src="@drawable/eye"
			android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_gravity="top"></ImageView>
		<TextView android:layout_width="wrap_content"
			android:layout_centerInParent="true" android:layout_height="wrap_content"
			android:text="No meal here, did you check in ?"
			android:textSize="20dip" android:textStyle="bold" android:textColor="#222"
			android:padding="20dip" android:layout_gravity="center_vertical"></TextView>
	</LinearLayout>
	
</RelativeLayout>


