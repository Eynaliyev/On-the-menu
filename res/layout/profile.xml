<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="fill_parent" android:layout_width="fill_parent"
	android:orientation="vertical">
	<utils.actionbar.ActionBar android:id="@+id/actionbar"
		style="@style/ActionBar" />
	<RelativeLayout android:layout_width="fill_parent"
		android:background="@drawable/tablecloth_selector"
		android:layout_height="fill_parent" android:id="@+id/middleView"
		android:layout_weight="1">

		<ImageView android:layout_width="fill_parent"
			android:scaleType="centerCrop" android:layout_height="fill_parent"
			android:id="@+id/profilePicture" />
		<RelativeLayout android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:layout_centerInParent="true"
			android:background="#AAFFFFFF">
			<LinearLayout android:layout_height="wrap_content"
				android:layout_width="wrap_content" android:layout_centerInParent="true"
				android:orientation="vertical" android:id="@+id/noProfilePictureView"
				android:padding="10dp">

				<ImageView android:layout_height="200dp"
					android:layout_width="200dp" android:background="@drawable/crop"
					android:layout_gravity="center_horizontal"></ImageView>
				<TextView android:layout_height="wrap_content" android:id="@+id/helpLabel"
					android:gravity="center" android:textSize="20sp" android:textColor="#333"
					android:textStyle="bold" android:text="" android:layout_width="match_parent"></TextView>
			</LinearLayout>
		</RelativeLayout>
	</RelativeLayout>

	<LinearLayout android:layout_height="wrap_content"
		android:layout_width="fill_parent" android:orientation="vertical"
		android:background="@drawable/toolbar_background_shape"
		android:padding="3dp">

		<Button android:layout_width="wrap_content" android:background="@drawable/custom_button_selector"
			android:id="@+id/buyButton" android:layout_height="44dip"
			android:text="Done" android:paddingLeft="30dip" android:paddingRight="30dip"
			android:onClick="onSaveProfile" android:textSize="20dip"
			android:layout_gravity="center_horizontal" android:textColor="#333">
			></Button>
	</LinearLayout>

</LinearLayout>
