
<selector xmlns:android="http://schemas.android.com/apk/res/android">

	<item android:state_pressed="true" android:drawable="@+drawable/btn_normal_pressed" />

	<item android:state_focused="true" android:state_enabled="false"
		android:drawable="@+drawable/btn_disable_focused" />
		
	<item android:state_focused="true" android:state_enabled="true"
		android:drawable="@+drawable/btn_normal_focused" />

	<item android:drawable="@+drawable/btn_normal"
		android:state_enabled="true" />
		
	<item android:drawable="@+drawable/btn_disable"
		android:state_enabled="false" />

</selector>